<h1 class="mt-3 text-center">Restaurant Details</h1>
<div class="container mt-4 col-md-8">
  <div class="card mb-3">
    <div class="row no-gutters">
      <div class="col-md-4">
        <div class="card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://loremflickr.com/320/240/<%=["restaurant", "cafe", "bar", "dinner", "food"].sample%>'); height: 100%; background-size: cover; background-position: center;"></div>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= @restaurant.name %></h5>
          <p class="card-text"><strong>Address:</strong> <%= @restaurant.address %></p>
          <p class="card-text"><strong>Phone Number:</strong> <%= @restaurant.phone_number %></p>
        </div>
      </div>
    </div>
  </div>

  <h2 class="mt-4">Reviews:</h2>
  <ul class="list-group mb-4">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item">
        <p><%= review.content %></p>
        <p><strong>Rating:</strong> <%= review.rating %> / 5</p>
      </li>
    <% end %>
  </ul>

  <div class="d-flex justify-content-between">
    <%= link_to "Leave a Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
    <%= link_to "Back", restaurants_path, class: "btn btn-secondary" %>
  </div>
</div>
